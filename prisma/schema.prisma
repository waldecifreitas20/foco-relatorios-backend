generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model Order {
  protocol String @id
  plate    String
  client   String
  service  String
  status   String
  providerProtocol String
  date     String
  hour     String?

  specialBudgets SpecialBudget[]
  mobilityService MobilityService[] 
}



model SpecialBudget {
  id               Int     @id @default(autoincrement())
  status           String  
  cost             Float
  wheelDolliesQtd  Int?
  additionalWheels Int?
  daysParked       Int?
  isUprighted      Boolean?
  isGroundWithdraw Boolean?
  isOffRoad        Boolean?
  origin           String?
  destiny          String?
  workerBase       String?
  reason           String? 
  explanation      String?

  orderProtocol String
  fk_order_protocol Order @relation(references: [protocol], fields: [orderProtocol])
}

model MobilityService {
  id            Int @id @default(autoincrement())
  destiny       String
  status        String
  cost          Float
  type          String
  plate         String
  totalDistance Int
  passengersQtd Int
  vehicleModel  String

  orderProtocol String
  fk_order_protocol Order @relation(references: [protocol], fields: [orderProtocol])
}
